            Console.WriteLine(product);
            Console.WriteLine("Your number times 50 is :" = yourNumber);
            Console.ReadLine();
            
            Console.WriteLine("Please write a number: ");
            int yourNumber = Console.WriteLine();
            Console.ReadLine();
            int total = yourNumber + 25;
            Console.WriteLine("Your number plus 25 is: " yourNumber + 25);
            Console.ReadLine();
            
             Console.WriteLine("Please write a number: ");
            int yourNumber = Console.WriteLine();
            Console.ReadLine()
            int quotiant = yourNumber / 12.5;
